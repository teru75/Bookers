<main>
<h1>Books</h1>
<section class="book">
	<table width="750">
		<tr>
		<th width="170">Title</th>
	
		<th width="400">Body</th>
		</tr>
		<% @books.each do |book|%>
		<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show", book_path(book) %></td>
		<td><%= link_to "Edit", edit_book_path(book) %></td>
		<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
		</tr>
		<%end%>
	</table>
</section>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<h4 class="title">Title</h4>
	<%= f.text_field :title %>
	<% if @book.errors.messages[:title].any? %>
	<span class="error"><%= @book.errors.messages[:title][0] %></span>
	<% end %>
	<h4 class="body">Body</h4>
	<%= f.text_area :body %>
<% if @book.errors.messages[:body].any? %>
	<span class="error"><%= @book.errors.messages[:body][0] %></span>
	<% end %>
	<h4 class="button"><%= f.submit 'Create Book' %></h4>

<% end %>
</main>