<main>
	<h1>Editing Book</h1>
	<%= form_for(@book) do |f| %>

	<h4 class="title">Title</h4>
	<%= f.text_field :title %>
	<h4 class="body">Body</h4>
	<%= f.text_area :body %>
	<h4 class="button"><%= f.submit "Update Book" %></h4>
	<span class="editback"><%= link_to "Edit", edit_book_path(@book) %> | <%= link_to "Back", books_path %></span>
	<% end %>
</main>